<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox stylesheets="style.css" fillHeight="false" minHeight="600.0" minWidth="600.0" prefHeight="600.0" prefWidth="600.0" snapToPixel="false" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fx.Controller">
    <children>
        <VBox minHeight="600.0" minWidth="350.0" prefHeight="600.0" prefWidth="350.0">
            <children>
                <Label minHeight="20.0" text="Root">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TreeView fx:id="tree" minHeight="579.0" minWidth="300.0" onContextMenuRequested="#buildPath" prefHeight="579.0" prefWidth="300.0">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </VBox.margin>
                </TreeView>
            </children>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </VBox>
        <VBox minHeight="600.0" minWidth="250.0" prefHeight="600.0" prefWidth="250.0">

            <children>
                <VBox minHeight="180.0" minWidth="250.0" prefHeight="220.0" prefWidth="250.0">
                    <children>
                        <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Direction">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" top="5.0" />
                            </VBox.margin></Label>
                        <TextField fx:id="textfieldDir" accessibleHelp="C://dir/        or //SERVER/dir" minHeight="25.0" minWidth="250.0" prefWidth="250.0" promptText="Root/branch/directory for search">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets right="3.0" />
                            </VBox.margin>
                        </TextField>
                        <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Text">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="textfieldText" minHeight="50.0" minWidth="250.0" prefHeight="90.0" prefWidth="250.0" promptText="Text for search, LINE FEED is not considered." VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets right="3.0" />
                            </VBox.margin>
                        </TextArea>
                        <HBox minWidth="210.0" prefHeight="45.0" prefWidth="210.0">
                            <children>
                                <Label minWidth="85.0" prefHeight="17.0" prefWidth="85.0" text="File extension">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="3.0" top="13.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="textfieldExt" accessibleRole="TEXT" alignment="CENTER" minHeight="25.0" minWidth="60.0" prefHeight="25.0" prefWidth="60.0" promptText="log">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="18.0" top="10.0" />
                                    </HBox.margin>
                                </TextField>
                                <Button alignment="CENTER" contentDisplay="TOP" minWidth="65.0" mnemonicParsing="false" onAction="#trySearch" prefWidth="65.0" text="Search" >
                                    <HBox.margin>
                                        <Insets left="18.0" right="3.0" top="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="BOTTOM_LEFT" disable="true" prefHeight="375.0" prefWidth="250.0">
                    <children>
                        <Label fx:id="warningLabel" text="Label" />
                    </children></HBox>
            </children>
        </VBox>
    </children>
</HBox>
